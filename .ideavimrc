" Base settings
set scrolloff=5
set ignorecase
set smartcase
set hlsearch
set clipboard+=unnamed
set keymodel^=startsel
set ideajoin

" Remaps
let mapleader = " "
nnoremap <silent> <CR> :nohlsearch<CR><CR>
nnoremap Y y$

" Plugins
set sneak
set quickscope

set highlightedyank
let g:highlightedyank_highlight_duration = 200
let g:highlightedyank_highlight_color = "rgba(250, 240, 170, 0.5)"

set surround

set easymotion
set notimeout
let g:EasyMotion_keys = "yeoipfjk,thsardcwgbvqz'nlu"

set commentary
